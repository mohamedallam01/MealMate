<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMealPlan"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp">



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRemoveMealPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/medium_electric_blue"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivMealDetails"
        app:srcCompat="@drawable/baseline_delete_24"
        android:layout_gravity="end"
        android:contentDescription="@string/remove_meal_from_week_plan" />

    <ImageView
        android:id="@+id/ivWeekPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/area_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvPlanMealName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/maastricht_blue"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="dummy text" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="20sp"
        android:background="@color/maastricht_blue"
        android:textColor="@color/white"
        tools:text="dummy text" />

</androidx.cardview.widget.CardView>